<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.lttng.scope.rcp.ui.internal.Application">
         </run>
      </application>
   </extension>
   <extension point="org.eclipse.ui.activities">
      <activity
            id="org.lttng.scope.activity.disabled"
            name="%activity.disabled.name">
         <enabledWhen>
            <with
                  variable="true">
               <equals
                     value="false">
               </equals>
            </with>
         </enabledWhen>
      </activity>
      <activityPatternBinding activityId="org.lttng.scope.activity.disabled"     pattern="org\.eclipse\.jdt.*" />
      <activityPatternBinding activityId="org.lttng.scope.activity.disabled"     pattern="org\.eclipse\.team.*" />
      <activityPatternBinding activityId="org.lttng.scope.activity.disabled"    pattern="org\.eclipse\.debug.*" />
      <activityPatternBinding activityId="org.lttng.scope.activity.disabled" pattern="org\.eclipse\.search.*" />
      <activityPatternBinding activityId="org.lttng.scope.activity.disabled"  pattern="org\.eclipse\.ui\.resource.*" />
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.eclipse.tracecompass.rcp.ui.menu.file"
               label="%menu.main.file"
               mnemonic="%menu.main.file.mnemonic">
            <command
                  commandId="org.eclipse.linuxtools.tmf.ui.openDirectory"
                  label="%command.openDirectory.name"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.tracecompass.rcp.ui.menu.file.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.restartWorkbench"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.tracecompass.rcp.ui.menu.file.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.eclipse.tracecompass.rcp.ui.menu.window"
               label="%menu.main.window">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="%command.showView.name"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.tracecompass.rcp.ui.menu.window.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.perspectives.showPerspective"
                  label="%command.showPerspective.name"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.savePerspective"
                  label="%command.savePerspective.name"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  label="%command.resetPerspective.name"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.tracecompass.rcp.ui.menu.window.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.eclipse.tracecompass.rcp.ui.menu.help"
               label="%menu.main.help"
               mnemonic="%menu.main.help.mnemonic">
            <command
                  commandId="org.eclipse.ui.help.helpContents"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.tracecompass.rcp.ui.menu.help.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.equinox.p2.ui.sdk.update"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.equinox.p2.ui.sdk.install"
                  style="push">
            </command>
            <separator
                  name="org.eclipse.tracecompass.rcp.ui.menu.help.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.help.helpContents"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F1">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="org.lttng.scope.rcp.ui.internal.SplashHandler"
            id="org.lttng.scope.rcp.ui.splashHandler">
      </splashHandler>
      <splashHandlerProductBinding
            productId="org.lttng.scope.rcp.branding.product"
            splashId="org.lttng.scope.rcp.ui.splashHandler">
      </splashHandlerProductBinding>
   </extension>
</plugin>
